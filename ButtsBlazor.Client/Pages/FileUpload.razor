@page "/upload"

@inject IButtsApiClient Client
@inject ILogger<Prompt> Logger
@inject PromptOptions Options
@inject IHttpClientFactory ClientFactory
@inject IJSRuntime JSRuntime;
@using ButtsBlazor.Client.Utils
@using ButtsBlazor.Client.Services
@implements IAsyncDisposable

<h3>File Upload</h3>
@if (isLoading)
{
    <p>Uploading...</p>
}
else
{
}
<div @ref="fileDropContainer" class="file-drop-zone @HoverClass" @ondragenter="OnDragEnter" @ondragleave="OnDragLeave" @ondragover="OnDragEnter">
    <InputFile OnChange="@OnChange" @ref="inputFile" accept="image/*" capture="environment" />
</div>
<div class="error-message-container">
    <p>@ErrorMessage</p>
</div>
<div class="image-container">
    <Gallery Images="imageSources"></Gallery>
</div>
