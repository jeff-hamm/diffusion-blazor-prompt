@page "/ipad"
@{
    Layout = "Shared/_Layout";
}
@model ButtsBlazor.Server.Pages.IpadModel
@{
    ViewData["Title"] = "Infinite Uploads";
}

<style>
    img {
        max-height: 100%;
        max-width: 100%;
    }
</style>
<div class="fullscreen">
    <form id="photo-form" method="post" class="fullscreen-content" action="/ipad" asp-antiforgery="true">
        <div class="photo-container">
            <img id="photo"/>
        </div>
        <div class="image-controls">
            <label class="cameraButton btn btn-primary">
                <span id="label">Take a picture</span>
                <input id="cameraInput" name="file" type="file" accept="image/*" capture="environment"/>
            </label>
            <button type="button" id="rotate" class="image-control btn btn-primary">Rotate</button>
            <button type="submit" id="save" class="image-control btn btn-primary">Save</button>
        </div>
    </form>
</div>
@section Scripts {
    <script src="/js/jquery.js?ver=5"></script>
    <script src="/js/ipad.js?ver=5"></script>
}